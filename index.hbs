{{!< default}}

<!-- Hero -->
<section >
    <div class="hero">
        <div class="hero--container common--max-width">

            <div class="hero--z-index hero--content">
                <h1 class="hero__title">
                    I am i title
                </h1>
                <p class="hero__description">
                    I am a sub title
                </p>
            </div>

        </div>
    </div>
    <div class="hero__curve">
        <svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" viewBox="0 0 1200 120">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" fill="#475de6" />
        </svg>
    </div>
</section>

<div class="gh-page">

    <div class="gh-container">

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
